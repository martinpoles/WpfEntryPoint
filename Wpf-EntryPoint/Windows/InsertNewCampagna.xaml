<Window x:Class="Wpf_EntryPoint.Windows.InsertNewCampagna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuova Finestra" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Muovo/Riutilizzo" VerticalAlignment="Top" Width="126"/>
            <TextBox x:Name="InputField1" Width="300" Height="30" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Rni" VerticalAlignment="Top" Width="126"/>
            <TextBox x:Name="InputField2" Width="300" Height="30" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Provider" VerticalAlignment="Top" Width="126"/>
            <TextBox x:Name="InputField3" Width="300" Height="30" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Supplier" VerticalAlignment="Top" Width="126"/>
            <TextBox x:Name="InputField4" Width="300" Height="30" Margin="5"/>
            <Button Content="Conferma"
                    Width="100"
                    Height="30"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
